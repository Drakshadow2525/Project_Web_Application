@model IEnumerable<FinalProjectPetey.Models.Orders_Details>

@{
    ViewBag.Title = "Orders_Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Orders_Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sub_total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.Order_status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trainer.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pet.Name)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Order_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sub_total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.Order_status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Trainer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Pet.Name)
        </td>
    </tr>
}

</table>
