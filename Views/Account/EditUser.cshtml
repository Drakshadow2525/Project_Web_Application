@using FinalProjectPetey.Models;
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="http://code.jquery.com/jquery-latest.js"></script>
}

<h2>EditUser</h2>
@{
    var a = (customer)ViewData["Userdata"];
}
<head>
    @Styles.Render("~/Content/Mintyb.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @if (Session["CheckInsert"] == "1")
    {
        Session["CheckInsert"] = "0";
        <script type="text/javascript">
                        alert("แก้ไขข้อมูลเสร็จสิ้น");
        </script>
    }
    @using (Html.BeginForm("EditUser1", "Account", new { id = Session["UserId"] }, FormMethod.Post))
    {
        <div>
            <div class="form-horizontal">
                <h4>customer</h4>
                <hr />
                <div class="form-group">
                    Fullname
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="Name" name="Name" value="@a.Fullname" style="width:590px;">
                    </div>
                </div>
            </div>
            <div class="form-group">
                Tel
                <div class="col-md-10">
                    <input type="text" class="form-control" id="Phone" name="Phone" value="@a.Phone_No" style="width:590px;">
                </div>
            </div>
            <div class="form-group">
                Email
                <div class="col-md-10">
                    <input type="text" class="form-control" id="Email" name="Email" value="@a.E_mail" style="width:590px;">
                </div>
            </div>
            <div class="form-group">
                Address
                <div class="col-md-10">
                    <textarea type="textarea" class="form-control" placeholder="ที่อยู่" id="Address" name="Address" style="width:590px;height:100px">@a.Address</textarea>
                </div>
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-success">บันทึก</button>
        </div>
    }

</body>