
@using FinalProjectPetey.Models
@{
    ViewBag.Title = "Pet";
}

<h2>Pet</h2>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/content/Index.css">
    @Styles.Render("~/Content/style.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
        <div class="row">
            <div class="col-md-3 bg-primary disabled">
                <br /><br />
                <div class="dropdown" align="center">
                    <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" style="width:180px;height:38px" data-hover="dropdown">
                        <a align="right">สัตว์เลี้ยง</a>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @Html.ActionLink("สุนัข", "Pet", new { sortOrder = "dog" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("แมว", "Pet", new { sortOrder = "cat" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("นก", "Pet", new { sortOrder = "bird" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("กระต่าย", "Pet", new { sortOrder = "rabbit" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("หนู", "Pet", new { sortOrder = "rat" }, new { @class = "dropdown-item" })
                        @Html.ActionLink("งู", "Pet", new { sortOrder = "snake" }, new { @class = "dropdown-item" })
                    </div>
                </div>
                <br /><br /><br />
                <div align="center">
                    @Html.ActionLink("อาหาร/อุปกรณ์", "Product", "Sell", new { id = Session["UserID"] }, new { @class = "btn btn-warning", style = "width:180px;height:38px" })
                </div>
                <br /><br /><br />
                <div align="center">
                    @Html.ActionLink("คอร์สเทรนสัตว์เลี้ยง", "Trainer", "Sell", new { id = Session["UserID"] }, new { @class = "btn btn-warning", style = "width:180px;height:38px" })
                </div>
            </div>



            <div class="col-md-9 bg-light disabled">
                <br />
                <h3>รายการสินค้า</h3>
                @using (Html.BeginForm())
                {
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-10">
                                <input maxlength="50" size="18" class="form-control mr-sm-0" type="search" placeholder="Search" name="SearchString" />
                            </div>
                            <div class="col-1">
                                <input type="submit" class="btn btn-success" value="Search" />
                            </div>
                        </div>
                    </div>
                }
                <br />
                <div class="row">
                    @foreach (Pet p in ViewBag.listProduct)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card mh-100">
                                    <img class="card-img-top" src=@Url.Content("~/Content/images/images_pet/" + @p.Images) width="700px;" height="250px;">
                                    <div class="card-body">
                                            <h4 class="card-title">

                                                <a>@Html.ActionLink(@p.Gene, "ViewDetails", "ShoppingCart", new { id = p.Pet_Id }, new { @class = "link" })</a>
                                            </h4>
                                            <h5>@Convert.ToInt32(p.Price) ฿</h5>
                                            <p class="card-text">@p.History.Substring(0, 90)...</p>
                                      </div>                             
                            </div>
                        </div>
                    }
                </div>
            </div>
            </div>
</body>
</html>

